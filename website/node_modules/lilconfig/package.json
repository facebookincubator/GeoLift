{
    "name": "lilconfig",
    "version": "2.0.3",
    "description": "A zero-dependency alternative to cosmiconfig",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "prebuild": "npm run clean",
        "build": "tsc --declaration",
        "postbuild": "du -h ./dist/*",
        "clean": "rm -rf ./dist",
        "test": "jest --coverage",
        "lint": "eslint ./src/*.ts"
    },
    "keywords": [
        "cosmiconfig",
        "config",
        "configuration",
        "search"
    ],
    "files": [
        "dist/*"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/antonk52/lilconfig"
    },
    "bugs": "https://github.com/antonk52/lilconfig/issues",
    "author": "antonk52",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^26.0.23",
        "@types/node": "^14.17.2",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "cosmiconfig": "7.0.0",
        "eslint": "^7.28.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "jest": "^26.6.3",
        "prettier": "^2.3.1",
        "ts-jest": "^26.5.6",
        "typescript": "^4.3.2"
    },
    "engines": {
        "node": ">=10"
    }
}
